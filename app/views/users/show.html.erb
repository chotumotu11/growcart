<section>
	<h2>Your Profile</h2>
	<ul class="list-group">
  <li class="list-group-item">Name : <%= current_user.name %></li>
  <li class="list-group-item">Address : <%= current_user.address %></li>
  <li class="list-group-item">email : <%= current_user.email %></li>
  <li class="list-group-item">Phone : <%= current_user.phone %></li>
</ul>

	<h2>Item History</h2>
	<%= "No Orders" if @itemsBought== [] %>
	<ul class="list-group">
		<table class="table">
  		<thead>
    		<tr>
      		<th>Item id</th>
      		<th>Title</th>
      		<th>Price</th>
      		<th>View</th>
    		</tr>
  		</thead>
		<% @itemsBought.each do |item| %>
  		<tbody>
    		<tr>
      		<th scope="row"><%= item.id %> </th>
      		<td><%= item.title %></td>
      		<td> <%= item.price %> </td>
      		<td><%= link_to "View" , item %></td>
    		</tr>
  		</tbody>
  	<% end %>
		</table>
	</ul>
</section>


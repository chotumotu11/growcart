 <h2><%= notice %></h2>
 <h4> <%= link_to "Admin Dashboard" , admin_index_path , method: "get" , class: "btn btn-success" %>
<h3>1. Add new category </h3>
<%= form_for(@newCat) do |f| %>
	<div class= "field" >
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.submit :Create , class: "btn btn-success" %>
	</div>
<% end %>

	<table class="table">
  <thead>
    <tr>
      <th>Category Name</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  	<% @allCat.each do |cat| %>
    <tr>
      <td scope="row"><%= cat[:name] %></td>
      <td><%= link_to "Destroy" , cat , method: :delete%></td>
    </tr>
  <% end %>
  </tbody>
</table>
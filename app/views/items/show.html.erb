
<div class="row">
	<h2>Welcome to Details Page </h2>
	<section>
		<h3 class="text-center">
			<%= @my_item.title %>
		</h3>
		<%= image_tag @my_item.avatar.url(:medium) , class: "pull-left col-sm-3"  %>
		<p class= "col-sm-offset-4">Price : <%= @my_item.price %></p> 
		<p class= "col-sm-offset-4">Description: <%= @my_item.description %></p>
		<p class= "col-sm-offset-4"><%= link_to "Add to Cart" , carts_path(@my_item) , method: :post %></p>
	</section>
</div>